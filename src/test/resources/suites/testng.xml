<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="FakeStore API Automation Test Suite" verbose="1">

    <!-- Suite-level listener for Extent Reports -->
    <listeners>
        <listener class-name="com.fakestore.automation.listeners.ExtentReportListener"/>
    </listeners>

    <!-- Auth Tests  -->
    <test name="Authentication Tests" preserve-order="true">
        <classes>
            <class name="com.fakestore.automation.tests.auth.AuthTests"/>
        </classes>
    </test>

    <!-- Product Tests - Core CRUD Operations -->
    <test name="Product Tests" preserve-order="true">
        <classes>
            <class name="com.fakestore.automation.tests.products.ProductGetTests"/>
            <class name="com.fakestore.automation.tests.products.ProductPostTests"/>
            <class name="com.fakestore.automation.tests.products.ProductPutTests"/>
            <class name="com.fakestore.automation.tests.products.ProductDeleteTests"/>
        </classes>
    </test>

    <!-- Cart Tests - crud -->
    <test name="Cart Tests" preserve-order="true">
        <classes>
            <class name="com.fakestore.automation.tests.carts.CartGetTests"/>
            <class name="com.fakestore.automation.tests.carts.CartPostTests"/>
            <class name="com.fakestore.automation.tests.carts.CartPutTests"/>
            <class name="com.fakestore.automation.tests.carts.CartDeleteTests"/>
        </classes>
    </test>

</suite>